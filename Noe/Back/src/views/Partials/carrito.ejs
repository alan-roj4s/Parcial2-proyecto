    <div id="cart" class="screen p-3 p-md-4"> 
        <h2 class="text-center mb-4">
            <i class="fas fa-shopping-cart"></i>Tu carrito
        </h2>
        <div id="cartItems" class="border rounded p-3 mb-4 bg-light">
            <!-- LOS ITEMS DEL CARRITO SE VAN A MOSTRAR ACA DINAMICAMENTE -->
            
            <!-- SI NO HAY ITEMS, QUE MUESTRE EL TEXTO DE QUE ESTA VACIO -->
            <% if(cartItems.length === 0) {%> 
                <p class="text-center text-muted">Tu carrito esta vacio.</p>
            <% } %>
        </div>

        <div class="row mt-4">
            <div class="col-md-6 mb-3 mb-md-0">
                <h4 class="fw-bold">Total: $<span id="cartTotal" class="text-primary">0</span></h4>
            </div>
            <div class="col-md-6 text-md-end">
                <button class="btn btn-secondary me-2 w-100 w-md-auto mb-2 mb-md-0" >
                    <i class="fas fa-arrow-left"></i> Seguir Comprando
                </button>
                <button class="btn btn-primary w-100 w-md-auto" id="checkoutBtn">
                    <i class="fas fa-credit-card"></i> Finalizar Compra
                </button>
            </div>
        </div>
    </div>
