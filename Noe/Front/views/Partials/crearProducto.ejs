<div id="admin-dashboard">
    <div class="dashboard-actions">
        <h1>Agregar Producto</h1>
        <div id="message-container"></div>
        <form id="add-product-form" enctype="multipart/form-data">
            <input type="text" name="nombre" placeholder="Nombre del producto..." required><br>
            <input type="text" name="categoria" placeholder="Categoria del producto..." required><br>
            <input type="text" name="plataforma" placeholder="Plataforma del producto..." required><br>
            <input type="number" name="precio" placeholder="Precio del producto..." step="0.01" required><br>
            <input type="file" name="imagen" accept="image/*" required><br>
            <button type="button" id="submit-product-btn">
                <i class="fas fa-plus"></i> Agregar Producto
            </button>
        </form>
    </div>
    <button id="logoutBtn">Cerrar sesion</button> 
</div>
<!-- MODAL DE CONFIRMACION -->
